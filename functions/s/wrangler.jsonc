/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "saas",
  "main": "./workers/app.ts",
  "compatibility_date": "2025-04-25",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true,
    "logs": {
      "invocation_logs": true,
      "head_sampling_rate": 1
    }
  },
  "vars": {
    "ENVIRONMENT": "local",
    "LOG_LEVEL": "Debug",
    "COMPANY_EMAIL": "motio@mail.com",
    "STRIPE_SYNC_INTERVAL_SEC": "5",
    "STRIPE_SYNC_BATCH_SIZE": "10",
    "AWS_REGION": "us-east-1",
    "AWS_ENDPOINT": "https://email.us-east-1.amazonaws.com"
  },
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "kv-local"
    }
  ],
  "queues": {
    "producers": [
      {
        "queue": "q-local",
        "binding": "Q"
      }
    ],
    "consumers": [
      {
        "queue": "q-local",
        "max_batch_size": 10,
        "max_batch_timeout": 3,
        "max_retries": 2,
        "dead_letter_queue": "q-dlq-local"
      }
    ]
  },
  "env": {
    "production": {
      "observability": {
        "enabled": true,
        "logs": {
          "invocation_logs": true,
          "head_sampling_rate": 1
        }
      },
      "vars": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "Info",
        "COMPANY_EMAIL": "motio@mail.com",
        "STRIPE_SYNC_INTERVAL_SEC": "5",
        "STRIPE_SYNC_BATCH_SIZE": "10",
        "AWS_REGION": "us-east-1",
        "AWS_ENDPOINT": "https://email.us-east-1.amazonaws.com"
      },
      "kv_namespaces": [
        {
          "binding": "KV",
          "id": "b9de09c525d74af195cd3d46ae5a21a5" // saas-kv-production
        }
      ],
      "queues": {
        "producers": [
          {
            "queue": "saas-q-production",
            "binding": "Q"
          }
        ],
        "consumers": [
          {
            "queue": "saas-q-production",
            "max_batch_size": 3,
            "max_batch_timeout": 3,
            "max_retries": 1
            // "dead_letter_queue": "<QUEUE-ID"
          }
        ]
      }
    }
  }
}
